<UserControl x:Class="MyChess.Controls.ChessFieldUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyChess.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50" Height="Auto" Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}">
    <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Stretch" >
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Name ="Caption" VerticalAlignment="Center" HorizontalAlignment="Center">
                Field
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
